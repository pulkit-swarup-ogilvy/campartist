{% extends 'Campartist\CatalogBundle::Desktop/layout.html.twig' %}

{% block title %}
    Campartist - Be a part of the band
{% endblock %}

{% block stylesheets %}
{% stylesheets '@CampartistCatalogBundle/Resources/public/css/*' filter='cssrewrite' %}
    <link rel="stylesheet" href="{{ asset_url }}" />
{% endstylesheets %}
{% endblock %}
{% block page_header %}
    Be part of the Band
{% endblock %}
{% block page_content %}
  <div class="row text-center">
    <div class="col-md-6 col-md-offset-3">
        <form name="search" id="search" action="{{ url('searchform') }}" method="post" class="margin-40">
            <input type="search" name="query" id="country-input" class="input-lg" value="" placeholder="Type country name" required="required" autocomplete="off"> <input type="submit" name="search" id="search" class="btn-lg" value="Search">
        </form>
    </div>
  </div>
{% endblock %}
{% block javascripts %}
{{ parent() }}
  <script type="text/javascript">
    $("#search").submit(function(event) {
      var action = $('#search').prop('action');
      var query = $('#country-input').val();
      action = String(action).replace(/\/$/, '');
      query = query.toLowerCase();
      $("#search").attr("action", action + '/' +encodeURI(query));
      var action = $('#search').prop('action');
      // event.preventDefault();
    });

  </script>
{% endblock %}